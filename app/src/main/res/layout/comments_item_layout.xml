<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.loopj.android.image.SmartImageView

        android:id="@+id/commentUserPhoto_et"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:src="@mipmap/user1" />
    <TextView
        android:id="@+id/commentUserName_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="tomsun28"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/commentUserPhoto_et"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/commentTime_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/commentUserName_et"
        android:text="2017-09-29"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/comment_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentUserName_et"
        android:layout_toEndOf="@+id/commentUserPhoto_et"
        android:layout_marginStart="10dp"
        android:textColor="#000000"
        android:text="哈哈哈哈哈哈"
        android:textSize="27sp"/>

</RelativeLayout>